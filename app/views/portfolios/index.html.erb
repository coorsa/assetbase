<div class="container">
  <% if @portfolios.empty? %>
    <div class="row pl-3">
      <p class="mt-5 ml-1 text-center">You don't have any portfolios yet. If you want to make gainzzz get started by creating a new portfolio!</p>
    </div>
  <% else %>
    <div class="row pl-3">
      <h2 class="mt-3 mb-4">My portfolios</h2>
    </div>
    <% current_user.portfolios.each do |portfolio| %>
      <div class="investment-container mb-4 py-1">
        <div class="row">
          <div class="col-10">
            <h3 class="ml-1"><%= portfolio.title %></h3>
          </div>
          <div class="col-2 align-self-center">
            <%= link_to "", portfolio_path(portfolio), class: "fa fa-angle-right" %>
          </div>
        </div>
        <div class="row pl-1 small-text ml-1">
          <%= portfolio.description %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row full-width-btn-container p-2">
      <%= link_to "Create", new_portfolio_path, class: "btn primary-btn" %>
  </div>
</div>
