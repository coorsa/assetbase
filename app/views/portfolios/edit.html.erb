<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-6">

      <h2>Add a new Portfolio</h2>

      <%= simple_form_for(@portfolio) do |f| %>
        <div class="form-group">
          <%= f.input :title, class: 'form-control', label: "Enter your Portfolio title:" %>
        </div>
        <div class="form-group">
          <%= f.input :description, class: 'form-control', label: "Enter a cool description:" %>
        </div>
        <div class="mt-3">
          <%= f.submit class: 'btn btn-outline-primary' %>
          <%= link_to 'Cancel', portfolios_path, class: 'btn btn-outline-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
