<div class="container" %>
  <h2 class="mt-3 mb-4">Edit portfolio</h2>
      <%= simple_form_for(@portfolio) do |f| %>
        <div class="form-group">
          <%= f.input :title, input_html: { class: "custom-input" }, label_html: { class: "custom-label"}, label: "Change the portfolio name:" %>
        </div>
        <div class="form-group">
          <%= f.input :description, input_html: { class: "custom-input" }, label_html: { class: "custom-label"}, label: "Change its description:" %>
        </div>
        <div class="mt-3 row d-flex" style="justify-content: space-around">
          <%= link_to 'Cancel', portfolios_path, class: 'btn hollow-btn col-5' %>
          <%= f.submit "Update", class: 'btn primary-btn col-5 text-center' %>
        </div>
      <% end %>
  </div>
</div>
