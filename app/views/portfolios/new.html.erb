<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-6">

      <h2>Add a new Portfolio</h2>

      <%= simple_form_for(@portfolio) do |f| %>


        <div class="form-group">
          <%= f.label :title, label: "Enter your Portfolio title:" %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description, label: "Enter a cool description:" %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="mt-3">
          <%= f.submit class: 'btn btn-outline-primary' %>
          <%= link_to 'Cancel', portfolios_path, class: 'btn btn-outline-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
