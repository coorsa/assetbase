<div class="container">
  <div class="row justify-content-center">
    <h2 class="mt-3"><%= @portfolio.title %></h2>
  </div>
  <div class="row justify-content-center">
    <p class="mb-0"><%= @portfolio.description %></p>
  </div>
  <div class="row logo-height full-img">
    <div class="col text-center align-self-center">
      <h5>Total value</h5>
      <%= @currency %> <%= @portfolio_value.round(2) %>
    </div>
  </div>

  <div class="container investment-container">
    <div class="row">
      <div class="col d-flex flex-row align-items-center px-0">
        <h3>Assets</h3>
        <%= link_to "", investments_path, class: "plus-symbol fa fa-plus mt-0" %>
      </div>
      <div class="col d-flex justify-content-end align-items-center px-0">
        <%= link_to '', edit_portfolio_path, class: "fa fa-pen m-2" %>
        <%= link_to "", portfolio_path(@portfolio), class: "fa fa-trash m-2", method: :delete, data:{ confirm: "Are you sure?" } %>
      </div>
    </div>
      <% @portfolio_investment.each do |investment| %>
        <% if investment.bookmarks.sum(:quantity) > 0 %>
          <div class="row no-gutters mt-2">
            <div class="col-3">
              <%= link_to investment.symbol, investment_path(investment), class: "stretched-link investment-symbol" %>
                <p class="investment-name"><%= investment.name %></p>
            </div>
            <div class="col-5 align-self-center">
              <%= image_tag "graphs/#{rand(5)}.png", width: "100%" %>
            </div>
            <div class="col-4 align-self-center">
              <div class="row align-self-center justify-content-end">
                <%= @currency %> <%= investment.bookmarks.where(portfolio_id: @portfolio).sum(:quantity) * 100 %>
                <%= link_to "", portfolio_bookmarks_path(@portfolio, investment_id: investment), class: "fa fa-angle-double-right align-self-center pb-1 pl-2" %>
              </div>
              <div class="row justify-content-center">
                <div class="col-6 mt-1">
                  <%= link_to "Trade", new_investment_bookmark_path(investment_id: investment), class: "primary-btn btn-small" %>
                </div>
              </div>
            </div>
          </div>
        <% else %>
        <% end %>
      <% end%>
  </div>
  <div class="row full-width-btn-container p-2">
    <%= link_to "Back", portfolios_path, class: "btn hollow-btn" %>
  </div>
</div>
