<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to "", portfolios_path, class: "fa fa-arrow-left fa-xl" %>
    </div>
    <div class="col">
      <h1> <%= @portfolio.title %> </h1>
    </div>
    <div class="col">
      <h2>. . .<h2>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <p>Total value = <%= @portfolio_value.round(2) %></p>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h5><%= @portfolio.description %></h5>
    </div>
  </div>

<div class="container card_container">
  <div class="row">
    <div class="col d-flex align-items-center">
      <h3>Assets</h3> <%= link_to "", investments_path, class: "fa fa-plus" %>
    </div>
  </div>

     <% @portfolio.investments.group_by(&:name).each do |name, investments| %>
     <% investment = investments.first %>
      <div class="row no-gutters">
        <div class="col-3">
          <%= link_to investment.symbol, investment_path(investment), class: "stretched-link" %>
          <p><%= investment.name %></p>
        </div>
        <div class="col-5">
          <%= image_tag "graphs/#{rand(5)}.png", width: "100%" %>
        </div>
        <div class="col-3 text-right">
          <text>$ 1,305.53</text>
          <p>.......</p>
        </div>
        <div class="col-1 align-self-start">
          <%= link_to "", portfolio_bookmarks_path(@portfolio, investment_id: investment), class: "fa fa-pen" %>
        </div>
      </div>
    <% end%>
 </div>
