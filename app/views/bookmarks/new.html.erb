<div class="container">
  <h2 class="mt-3 mb-4">Add to portfolio</h2>
  <%= simple_form_for [@investment, @bookmark] do |f| %>
    <div class="form-group mt-4">
      <%= f.association :portfolio, input_html: { class: "custom-input" }, label_html: { class: "custom-label"}, wrapper_html: { class: "dropstyle" } %>
    </div>
    <div class="form-group">
      <%= f.input :comment, placeholder: "Last words, please.", input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_type, as: :select, collection: ["Buy", "Sell"], selected: "Buy", input_html: { class: "custom-input" }, label_html: { class: "custom-label"}  %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_price, label: "Transaction price in $", placeholder: "No small tickets, por favor", input_html: { class: "custom-input" }, label_html: { class: "custom-label"}  %>
    </div>
    <div class="form-group">
      <%= f.input :quantity, placeholder: "How many gazillions?", input_html: { class: "custom-input" }, label_html: { class: "custom-label"}  %>
    </div>
    <div class="form-group">
      <%= f.input :date, label: "Transaction date", input_html: { class: "custom-input flatpickr", style: "background-color: transparent;"}, label_html: { class: "custom-label"} %>
    </div>
    <div class="mt-3 row justify-content-around">
      <%= link_to 'Cancel', investment_path(@investment), class: 'btn hollow-btn col-5' %>
      <%= f.button :submit, "Add", class: 'btn primary-btn col-5 text-center' %>
    </div>
  <% end %>
  <%# <%= link_to 'Back to all assets', investments_path, class: 'btn btn-outline-warning btn-block' %>
</div>
