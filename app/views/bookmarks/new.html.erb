<div class="container">
  <h2>Add to portfolio</h2>
  <%= simple_form_for [@investment, @bookmark] do |f| %>
    <div class="form-group mt-5">
      <%= f.association :portfolio, input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    <div class="form-group">
      <%= f.input :comment, placeholder: "Which portfolio, fren?", input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_type, as: :select, collection: ["Buy", "Sell"], selected: "Buy", input_html: { class: "custom-input" }, label_html: { class: "custom-label"}  %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_price, label: "Transaction Price in Â£", placeholder: "No small tickets, por favor", input_html: { class: "custom-input" }, label_html: { class: "custom-label"}  %>
    </div>
    <div class="form-group">
      <%= f.input :quantity, placeholder: "How many did you get", input_html: { class: "custom-input" }, label_html: { class: "custom-label"}  %>
    </div>
    <div class="form-group">
      <%= f.input :date, label: "Buy Date", input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    </div>
    <div class="mt-3">
      <%= f.submit class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
  <%= link_to 'Cancel', investment_path(@investment), class: 'btn btn-outline-warning' %>
  <%= link_to 'Back to all assets', investments_path, class: 'btn btn-outline-warning btn-block' %>
</div>
