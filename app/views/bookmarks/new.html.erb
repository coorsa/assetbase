

<div class="container" %>
  <%= simple_form_for [@asset , @bookmark] do |f| %>
    <div class="form-group">
      <%= f.label :portfolio_id, label: "Enter portfolio:" %>
      <%= f.collection_select :portfolio_id, Portfolio.order(:title), :id, :title %>
    </div>
    <div class="form-group">
      <%= f.label :comment, label: "Enter your comment:" %>
      <%= f.text_field :comment, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :transaction_type, label: "Enter the transaction type:" %>
      <%= f.text_field :transaction_type, class: 'form-control' %>
    </div>
      <div class="form-group">
      <%= f.label :transaction_price, label: "Enter a cool transaction price:" %>
      <%= f.text_field :transaction_price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :quantity, label: "Enter the quantity" %>
      <%= f.text_field :quantity, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :date, label: "Enter the date" %>
      <%= f.text_field :date, class: 'form-control' %>
    </div>
    <div class="mt-3">
      <%= f.submit class: 'btn btn-outline-primary' %>
      <%= link_to 'Cancel', @asset_path, class: 'btn btn-outline-warning' %>
    </div>
  <% end %>
  <%= link_to 'Back to all assets', assets_path, class: 'btn btn-outline-warning btn-block' %>
</div>
