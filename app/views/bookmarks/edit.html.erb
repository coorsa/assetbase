<div class="container" %>
  <%= simple_form_for [@investment, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.association :portfolio, placeholder: "The Portfolio that is gonna make you rich" %>
    <div class="form-group">
      <%= f.input :comment, placeholder: "The Portfolio that is gonna make you rich",class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_type, as: :select, collection: ["Buy", "Sell"], selected: "Buy", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_price, label: "Transaction Price in Â£", placeholder: "Hopefully you are working in 6 figures", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :quantity, placeholder: "How many did you get", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :date, label: "Buy Date" %>
    </div>
    <div class="mt-3">
      <%= f.submit class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
  <%= link_to 'Back portfolio', portfolio_path(@bookmark.portfolio_id), class: 'btn btn-outline-warning btn-block' %>
</div>
