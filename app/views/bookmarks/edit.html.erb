<div class="container" %>
  <h2>Edit investment</h2>
  <%= simple_form_for [@investment, @bookmark] do |f| %>
    <div class="form-group mt-4">
      <%= f.association :portfolio, input_html: { class: "custom-input" }, label_html: { class: "custom-label"}, wrapper_html: { class: "dropstyle" } %>
    <div class="form-group">
      <%= f.input :comment, placeholder: "Last words, please.", input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_type, as: :select, collection: ["Buy", "Sell"], selected: "Buy", input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    </div>
    <div class="form-group">
      <%= f.input :transaction_price, label: "Transaction Price in #{current_user.currency}", placeholder: "No small tickets, por favor", input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    </div>
    <div class="form-group">
      <%= f.input :quantity, placeholder: "How many gazillions?", input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
    </div>
    <div class="form-group">
      <%= f.input :date, label: "Buy Date", input_html: { class: "custom-input flatpickr", style: "background-color: transparent; color: white" }  %>
    </div>
    <div class="mt-3 row d-flex" style="justify-content: space-around">
      <%= f.button :submit, "Edit", class: 'btn primary-btn col-5 text-center' %>
      <%= link_to 'Cancel', portfolio_path(@bookmark.portfolio_id), class: 'btn hollow-btn col-5' %>
    </div>
  <% end %>
</div>
