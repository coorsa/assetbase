
<%= render "shared/searchForm" %>

<% if @investments.empty?%>
  <div class="new-asset-wrapper">
    <p>NO ITEM WITH THAT NAME, WOULD YOU LIKE TO CREATE A NEW RECORD? OR TRY SEARCHING AGAIN?<p>
    <%= link_to " ADD NEW ASSET", new_investment_path, class: "add-new-asset-btn btn btn-primary" %>
  </div>
<% else %>
  <ol>
    <% @investments.shuffle.first(50).each do |investment| %>
      <li>  <%= link_to investment.symbol, investment_path(investment) %> <%= investment.id %> </li>
    <% end%>
  </ol>
<% end %>
