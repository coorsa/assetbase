  <div class="container">
      <h2 class="mt-3 mb-4" >Add a new investment</h2>
      <%= simple_form_for(@investment) do |f| %>
        <div class="form-group">
          <%= f.input :name, input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
        </div>
        <div class="form-group">
          <%= f.input :category, as: :select, collection: ["share", "crypto", "NFT"], input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
        </div>
        <div class="form-group">
          <%= f.input :symbol, input_html: { class: "custom-input" }, label_html: { class: "custom-label"} %>
        </div>
        <div class="mt-3 row d-flex" style="justify-content: space-around">
          <%= link_to 'Cancel', :back, class: 'btn hollow-btn col-5' %>
          <%= f.submit "Create", class: 'btn primary-btn col-5 text-center' %>
        </div>
      <% end %>
  </div>
</div>
