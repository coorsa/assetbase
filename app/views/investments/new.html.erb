  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Add a new asset</h2>
      <%= simple_form_for(@investment) do |f| %>
        <div class="form-group">
          <%= f.input :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :category, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :symbol, class: 'form-control' %>
        </div>
        <div class="mt-3">
          <%= f.submit class: 'btn btn-outline-primary' %>
          <%= link_to 'Cancel', investments_path, class: 'btn btn-outline-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
