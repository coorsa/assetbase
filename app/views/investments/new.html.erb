  <div class="row justify-content-center">
    <div class="col-6">

      <h2>Add a new asset</h2>

      <%= simple_form_for(@investment) do |f| %>


        <div class="form-group">
          <%= f.label :name, label: "Enter your asset name:" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :category, label: "Enter a category:" %>
          <%= f.text_field :category, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :symbol, label: "Enter a ticker symbol or other asset ID:" %>
          <%= f.text_field :symbol, class: 'form-control' %>
        </div>
        <div class="mt-3">
          <%= f.submit class: 'btn btn-outline-primary' %>
          <%= link_to 'Cancel', investments_path, class: 'btn btn-outline-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
