<div class="container pt-5">
  <%= link_to "", root_path, class: "fa fa-arrow-left fa-xl" %>
  <h3 class="text-center mt-4 mb-4">Sign in to Assetbase</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row container w-100 form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: "custom-input", autocomplete: "email" }, wrapper_html: { class: 'w-100' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { class: "custom-input", autocomplete: "current-password" }, wrapper_html: { class: 'w-100' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="row form-actions full-width-btn-container">
      <%= f.button :submit, "Log in", class: "btn primary-btn" %>
    </div>
  <% end %>
  <div class="container">
    <%= render "devise/shared/links" %>
  </div>
</div>
